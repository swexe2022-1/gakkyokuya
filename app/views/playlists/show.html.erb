
    <br>
        <p>

            
            <p> <%= image_tag "/get_playlist_image/#{@playlist.id}" %></p>

            
            <p>プレイリスト名：<%= @playlist.title %></p>
            
            <p>楽曲一覧:</p>
            
            <% @tracks.each do |e| %>
                <br>
                    <p>
                        <p> <%= image_tag "/get_track_image/#{e.id}" %></p>
                        <p>楽曲名：<%= e.title %></p>
                        <P>説明：<%= e.description %></P>
                        <audio src= "<%= "#{e.mp3}" %>" controls="">
                        <p>音声を再生するには、audioタグをサポートしたブラウザが必要です。</p>
                        </audio>
                        <br><%= link_to 'プレイリストから削除', "#{params[:id]}/remove_track?track_id=#{e.id}", method: :post%></br>


                    </p>
                </br>
            <% end %>
            
            <p>楽曲の追加</p>
            <%= form_tag "#{params[:id]}/add_track", method: :post do %>
                <p>
                    <%= label_tag :track_id, "楽曲ID"%>
                    <%= number_field_tag :track_id %>
                </p>
                <%= submit_tag '追加' %>
            <%end %>
            
            <br><%= link_to '削除', playlist_path(@playlist.id), method: :delete %></br>
            <%= button_to "戻る", { :action => "index" }, :method => "get" %>
        </p>
    </br>
