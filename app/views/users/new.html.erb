<%= form_tag users_path, method: :post do %>
    <p>
        <%= label_tag :name, '名前' %>
        <%= text_field_tag :name %>
    </p>
    <p>
        <%= label_tag :email, 'メールアドレス' %>
        <%= email_field_tag :email  %>
    </p>
    <p>
        <%= label_tag :password, 'パスワード' %>
        <%= password_field_tag :password %>
    </p>
    
    <%= submit_tag '登録' %>
<% end %>