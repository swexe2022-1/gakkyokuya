<h5> マイページ </h5>

<h2><%= @user.name %></h2>

<div class="d-flex justify-content-between p-3">
  <h5> アップロード楽曲一覧 </h5>
  <%= link_to '楽曲をアップロード', new_track_path, class: 'btn btn-warning' %>
</div>  


<% @tracks.each_slice(5) do |slice_tracks| %>
  <div class='row'>
    <% slice_tracks.each do |t| %>
      <%= render 'tracks/track', track: t %>
    <% end %>
  </div>
<% end %>

<div class="d-flex justify-content-between p-3">
  <h5> 作成プレイリスト一覧  </h5>
  <%= link_to 'プレイリストを作成', new_playlist_path, class: 'btn btn-warning' %>
</div>  

<% @playlists.each_slice(5) do |slice_playlists| %>
  <div class='row'>
    <% slice_playlists.each do |t| %>
      <%= render 'playlists/playlist', playlist: t %>
    <% end %>
  </div>
<% end %>
