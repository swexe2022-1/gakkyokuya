<%= form_tag login_path, method: :post do %>
    <p>
        <%= label_tag :email, 'メールアドレス' %>
        <%= email_field_tag :email  %>
    </p>
    <p>
        <%= label_tag :password, 'パスワード' %>
        <%= password_field_tag :password %>
    </p>
    
    <%= submit_tag 'ログイン' %>
<% end %>

<%= link_to '新規登録', signin_path %>